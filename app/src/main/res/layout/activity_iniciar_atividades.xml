<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IniciarAtividades"
    android:background="@color/novoFundoInicio">


    <TextView
        android:id="@+id/tituloPrincipal"
        android:layout_width="213dp"
        android:layout_height="59dp"
        android:layout_marginTop="60dp"
        android:drawableLeft="@drawable/tarefa"
        android:gravity="center"
        android:text="@string/Titulo2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout

        android:layout_width="319dp"
        android:layout_height="426dp"
        android:layout_marginTop="52dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloPrincipal"
        app:layout_constraintVertical_bias="0.432">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/corBotao2"
            android:drawableLeft="@drawable/icons8_imc_50"
            android:text="@string/botaoImc" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/corBotao2"
            android:drawableLeft="@drawable/calcularmedia"
            android:text="@string/botaoAluno" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/corBotao2"
            android:drawableLeft="@drawable/icons8_anime_40"
            android:text="@string/botaoInformacao" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>